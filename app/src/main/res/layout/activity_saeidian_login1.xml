<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sms_drawable3"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sign in"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Login to your account"
                    android:textSize="20dp"
                    android:textColor="#808080"
                    android:textStyle="bold"
                     />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="30"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/get_username"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="Username"
                    android:textColorHint="#808080"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    android:background="@drawable/sms_drawable"
                    android:textStyle="bold"
                    android:inputType="text"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/get_password"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:textColorHint="#808080"
                    android:ems="10"
                    android:hint="Password"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginBottom="10dp"

                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/sms_drawable"
                    android:textStyle="bold"
                    android:inputType="text"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:ems="10"
                    android:text="Forget Password"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:layout_marginLeft="250dp"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="20"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/login2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/get_name2"
                    android:layout_marginLeft="15dp"

                    android:textColor="#000"
                    android:background="@drawable/sms_drawable2"
                    android:text="Login"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/no_acount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dont have acount? Sign Up"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#808080"
                    android:layout_marginLeft="70dp"/>
                <TextView
                    android:id="@+id/guest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue as Guest"
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    android:layout_marginLeft="90dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>