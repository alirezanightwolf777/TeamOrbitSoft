<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sms_drawable3"

    >

    <TextView
        android:id="@+id/factorial_show"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Factorial Calculator "
        android:textColor="#000"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="152dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/show_factorial"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_number"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/sms_drawable2"
        android:text="result"
        android:textColor="#000"

        android:textSize="30dp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="477dp" />

    <EditText
        android:id="@+id/enter_number"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/show_number"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/sms_drawable"
        android:ems="10"
        android:hint="Enter Number"
        android:inputType="text"
        android:paddingStart="110dp"
        android:paddingEnd="20dp"
        android:textColorHint="#808080"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/show_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/factorial_show"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="40dp"

        android:text="Factorial Result "
        android:textColor="#000"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="152dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/show_factorial2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_factorial"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/sms_drawable2"
        android:text="reset"
        android:textColor="#000"

        android:textSize="30dp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="477dp" />
</RelativeLayout>