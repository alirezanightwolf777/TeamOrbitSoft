<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9000"
    android:orientation="vertical"
    tools:context=".Moosavi.moosavi_login"
    >
    <LinearLayout
        android:layout_weight="1300"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_weight="350"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:orientation=""
        >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="                            Please enter the password to login"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="500"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_weight="300"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10"
            android:layout_marginRight="10"
            >
            <TextView
                android:id="@+id/T1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="_"
                android:layout_marginRight="10"
                />
            <TextView
                android:id="@+id/T2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="_"
                android:layout_marginRight="10"
                />
            <TextView
                android:id="@+id/T3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="_"
                android:layout_marginRight="10"
                />
            <TextView
                android:id="@+id/T4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="_"
                android:layout_marginRight="10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="750"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_weight="500"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="100"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/CLEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10"
                android:layout_weight="1"
                android:text="Clear"
                app:backgroundTint="#000000" />
            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Log in"
                app:backgroundTint="#000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="750"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1500"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/B1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="1"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/B2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="2"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/B3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="3"
            app:backgroundTint="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1500"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/B4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="4"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/B5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="5"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/B6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="6"
            app:backgroundTint="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1500"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/B7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="7"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/B8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="8"
            app:backgroundTint="#000000" />
        <Button
            android:id="@+id/B9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10"
            android:layout_weight="1"
            android:text="9"
            app:backgroundTint="#000000" />
    </LinearLayout>
</LinearLayout>
































